<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/app_title"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=" EFC "
            android:textSize="120dp">

        </TextView>

        <TextView
            android:id="@+id/app_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Eco Friendly Car"
            android:layout_below="@id/app_title"
            android:textSize="30dp">

        </TextView>

        <EditText
            android:id="@+id/login_email"
            android:layout_below="@+id/app_title"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/app_title"
            android:hint="I.D"
            android:layout_marginTop="150dp" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="P.s"
            android:layout_alignLeft="@+id/app_title"
            android:layout_below="@+id/login_email" />



        <Button
            android:id="@+id/signup_button"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:text="Sign up"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/login_password"
            android:layout_alignLeft="@+id/app_title"
            />

        <Button
            android:id="@+id/login_button"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:text="login"
            android:textAllCaps="false"
            android:layout_alignTop="@+id/signup_button"
            android:layout_alignEnd="@+id/app_title"
            android:layout_toRightOf="@+id/signup_button"/>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>